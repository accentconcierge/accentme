<center>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



  <div class="field">
    
    <%= f.email_field :email, autofocus: true, placeholder: 'Email',class: 'inputme' %>
  </div>

   <div class="field">
    
    <%= f.phone_field :phone, autofocus: true, placeholder: 'Mobile #',class: 'inputme' %>
  </div>

  <div class="field">
    
    <% if @validatable %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'inputme'%>
  </div>
<em>(<%= @minimum_password_length %> characters minimum)</em>
  <div class="field">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'inputme', placeholder: 'Confirmation' %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up", class: "learnmore" %>
  </div>
<% end %>
</br>
<%= render "devise/shared/links" %>
</center>
