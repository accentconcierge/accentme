        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <a class="navbar-brand" href="#">Accent</a>
    </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
              <br>
             <li> <%= link_to "Settings", edit_user_registration_path, class: "textchanger3" %></li>
             <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "textchanger3" %></li>
        <% else if admin_signed_in? %>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "textchanger3" %></li>
